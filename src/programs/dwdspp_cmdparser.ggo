# -*- Mode: Text -*-
# gengetopt specification for 'dwdspp'
package "dwdspp"
purpose	"Tokenizer for the KDWDS project."

# Options
option	"output"	o	"Specify output file"					string default="-"		no
option  "list"		l       "Args are input-file LISTS, not input-file NAMES"	no
option	"verbose"	v	"Verbosity level"					int default="1"			no
