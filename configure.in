AC_MSG_CHECKING([whether to use trigrams])
AC_ARG_ENABLE(trigrams,
	AC_HELP_STRING([--enable-trigrams], [Use trigrams (default=no)]),
	[ac_cv_enable_trigrams="$enableval"],[ac_cv_enable_trigrams="no"])

