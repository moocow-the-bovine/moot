  AC_MSG_RESULT(yes)
  AC_DEFINE(MOOT_USE_TRIGRAMS,1,
	    [Define this to enable use of trigrams])
  CONFIG_OPTIONS="$CONFIG_OPTIONS USE_TRIGRAMS=1"
else
  AC_MSG_RESULT(no)
  CONFIG_OPTIONS="$CONFIG_OPTIONS USE_TRIGRAMS=0"
fi
